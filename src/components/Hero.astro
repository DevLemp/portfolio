---
const { headline, subtitle, ctaLabel, ctaUrl } = Astro.props;
---

<header class="bg-gradient-to-r from-blue-600 to-blue-400 text-white py-24">
  <div class="container mx-auto text-center px-6">
    <h1 class="text-5xl md:text-6xl font-bold mb-4">{headline}</h1>
    <p class="text-lg md:text-2xl mb-8">{subtitle}</p>
    <a href={ctaUrl} class="inline-block px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg shadow hover:shadow-lg transition">
      {ctaLabel}
    </a>
  </div>
</header>
