---
const { project } = Astro.props;
---

<div class="project-card border rounded-lg p-4 shadow-md hover:shadow-lg transition">
  <h3 class="text-xl font-bold mb-2">{project.title}</h3>
  <p class="text-gray-700 mb-2">{project.description}</p>
  <p class="text-sm text-gray-500 mb-2">
    Status: <span class="font-semibold">{project.status}</span> | Tech: {project.tech.join(", ")}
  </p>
  {project.github && (
    <a href={project.github} target="_blank" class="text-blue-600 hover:underline">View on GitHub</a>
  )}
</div>
